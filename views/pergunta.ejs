<%- include('partials/header.ejs')%>
<body>
    <%- include('partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h1><%= pergunta.Titulo%></h1>
        <p><%= pergunta.Pergunta%></p>
        <form action="/salvarresposta" method="POST">

            <h3>Responda</h3>

            <br>
            
            <label>Resposta:</label>

            <textarea placeholder="Digite sua resposta" class="form-control" name="resposta" required></textarea>

            <input type="text" name="perguntaid" value="<%= pergunta.id%>" hidden="true" >

            <br>


            <button type="submit" class="btn btn-success"> Responder </button>
        </form>
        <hr>

        <h3>Respostas:</h3>

        <hr>
        
        <% resposta.forEach(rep => {%>

            <p><%= rep.resposta%></p>

        <%})%>
    </div>
</body>
<%- include('partials/footer.ejs')%>